{
    "name": "PWR_network",
    "n_gpu": 1,

    "arch": {
        "type": "my3DUnet",
        "args": {
            "n_features": 64,
            "n_classes": 1,
            "image_size": 64,
            "dropout_rate": 0.05
        }
    },
    "data_loader": {
        "type": "RHDataLoader_dfield",
        "args":{
